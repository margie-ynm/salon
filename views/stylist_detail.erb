<h1><%= @stylist.name %></h1>

<h5>Update Details</h5>
<form action="/stylists/<%= @stylist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="stylist-name">Stylist Name:</label>
  <input type="text" id="city-name" name="stylist-name">
  <button type="submit" class="btn">Update Stylist</button>
</form>
<form action="/stylists/<%= @stylist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn">Delete stylist</button>
</form>
<a href="/stylists">Return Home</a>
